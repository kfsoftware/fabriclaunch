{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": []
    },
    "desktop:dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "AUTH_SECRET",
    "AUTH_DRIZZLE_URL",
    "POSTGRES_URL",
    "PASSWORD_SALT",
    "GH_CLIENT_ID",
    "GH_CLIENT_SECRET",
    "RESEND_API_KEY",
    "EMAIL_FROM",
    "NEXT_PUBLIC_EXTERNAL_URL",
    "MINIO_ACCESS_KEY",
    "MINIO_SECRET_KEY",
    "MINIO_ENDPOINT",
    "MINIO_PORT",
    "MINIO_USE_SSL",
    "MINIO_REGION",
    "MINIO_BUCKET_NAME"
  ]
}